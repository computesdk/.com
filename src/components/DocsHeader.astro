---
interface Props {
  title?: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<header
  class="fixed left-0 right-0 top-0 z-10 border-b border-gray-200 bg-white/80 font-sans backdrop-blur-sm dark:border-gray-700 dark:bg-gray-900/80"
>
  <div class="mx-auto px-6">
    <div class="flex h-16 items-center justify-between">
      <!-- Left side: Logo + Docs -->
      <div class="flex items-center">
        <a href="/" class="flex items-center">
          <img
            src="/images/hv_main_logo.svg"
            alt="ComputeSDK Logo"
            class="h-8 w-auto"
          />
          <span class="ml-3 text-xl font-semibold text-gray-900 dark:text-white"
            >Docs</span
          >
        </a>
      </div>

      <!-- Right side: Navigation links -->
      <nav class="flex items-center space-x-6">
        <a
          href="/pro"
          class="text-sm font-medium text-gray-700 hover:text-blue-600 dark:text-gray-300 dark:hover:text-blue-400"
        >
          Operator
        </a>
        <a
          href="mailto:contact@computesdk.com"
          class="text-sm font-medium text-gray-700 hover:text-blue-600 dark:text-gray-300 dark:hover:text-blue-400"
        >
          Contact
        </a>
      </nav>
    </div>
  </div>

  {/* Optional description area */}
  {
    description && (
      <div class="border-t border-gray-200 bg-white dark:border-gray-700 dark:bg-gray-900">
        <div class="mx-auto max-w-7xl px-4 py-3 sm:px-6 lg:px-8">
          <p class="text-sm text-gray-600 dark:text-gray-300">{description}</p>
        </div>
      </div>
    )
  }
</header>

{/* Add padding to the top of the main content to account for fixed header */}
<div class={`h-16 ${description ? "pt-20" : ""}`}></div>
