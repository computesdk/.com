<div
    class="group relative w-full max-w-xl bg-white dark:bg-neutral-900 ring-1 ring-neutral-300 dark:ring-neutral-700 hover:ring-emerald-500 transition-all duration-300 shadow-xl overflow-hidden rounded-sm"
>
    <!-- Package Manager Tabs -->
    <div
    class="flex bg-gray-200 dark:bg-gray-800 border-b border-gray-300 dark:border-gray-700"
    >
    <button
        onclick="switchTab('npm')"
        id="tab-npm"
        class="tab-button px-5 py-3 mt-0 text-sm font-medium transition-colors bg-gray-400 dark:bg-gray-500 text-black dark:text-white border-b-2 border-emerald-500"
    >
        npm
    </button>
    <button
        onclick="switchTab('pnpm')"
        id="tab-pnpm"
        class="tab-button px-5 py-3 mt-0 text-sm font-medium transition-colors bg-gray-300 dark:bg-gray-700 text-neutral-600 dark:text-neutral-400 hover:text-black dark:hover:text-white border-b-2 border-transparent hover:border-neutral-400 dark:hover:border-neutral-600"
    >
        pnpm
    </button>
    <button
        onclick="switchTab('bun')"
        id="tab-bun"
        class="tab-button px-5 py-3 mt-0 text-sm font-medium transition-colors bg-gray-300 dark:bg-gray-700 text-neutral-600 dark:text-neutral-400 hover:text-black dark:hover:text-white border-b-2 border-transparent hover:border-neutral-400 dark:hover:border-neutral-600"
    >
        bun
    </button>
    <button
        onclick="switchTab('curl')"
        id="tab-curl"
        class="tab-button px-5 py-3 mt-0 text-sm font-medium transition-colors bg-gray-300 dark:bg-gray-700 text-neutral-600 dark:text-neutral-400 hover:text-black dark:hover:text-white border-b-2 border-transparent hover:border-neutral-400 dark:hover:border-neutral-600"
    >
        curl
    </button>
    </div>

    <!-- Command Display -->
    <div class="flex items-center justify-between px-6 py-5 my-2">
    <code
        id="command-text"
        class="font-mono text-sm text-black dark:text-white truncate bg-gray-200 dark:bg-gray-700 px-4 py-2 rounded-sm w-full text-start"
    >
        npm create compute
    </code>
    <button
        onclick="copyCommand()"
        class="ml-4 shrink-0 rounded-sm bg-emerald-600 px-3 py-1.5 text-sm font-semibold text-white hover:bg-emerald-500 transition-colors"
    >
        Copy
    </button>
    </div>
</div>


<script>
  // At the top of your script section
  declare global {
  interface Window {
    switchTab: (tabId: string) => void;
    copyCommand: () => void;
    }
  }

  type PackageManager = 'npm' | 'pnpm' | 'bun' | 'curl';
  
  const commands: Record<PackageManager, string> = {
    npm: 'npm create compute',
    pnpm: 'pnpm create compute',
    bun: 'bun create compute',
    curl: 'curl -fsSL https://compute.sdk/install.sh | sh'
  };

  let currentTab: PackageManager = 'npm';

  function switchTab(tab: PackageManager) {
    currentTab = tab;
    
    // Update command text
    const commandText = document.getElementById('command-text');
    if (commandText) {
      commandText.textContent = commands[tab];
    }
    
    // Update tab styles
    document.querySelectorAll('.tab-button').forEach(button => {
      button.className = 'tab-button px-5 py-3 mt-0 text-sm font-medium transition-colors bg-gray-300 dark:bg-gray-700 text-neutral-600 dark:text-neutral-400 hover:text-black dark:hover:text-white border-b-2 border-transparent hover:border-neutral-400 dark:hover:border-neutral-600';
    });
    
    const activeTab = document.getElementById(`tab-${tab}`);
    if (activeTab) {
      activeTab.className = 'tab-button px-5 py-3 mt-0 text-sm font-medium transition-colors bg-gray-400 dark:bg-gray-500 text-black dark:text-white border-b-2 border-emerald-500';
    }
  }

  function copyCommand() {
    navigator.clipboard.writeText(commands[currentTab]);
  }

  // Make functions globally available
(window as any).switchTab = switchTab;
(window as any).copyCommand = copyCommand;
</script>