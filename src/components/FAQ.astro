---
// FAQ.astro - A simple FAQ component

interface FAQItem {
  question: string;
  answer: string;
}

interface FAQProps {
  faqs: FAQItem[];
  title?: string;
  className?: string;
  questionClassName?: string;
  answerClassName?: string;
}

const {
  faqs = [],
  title = "Frequently Asked Questions",
  className = "",
  questionClassName = "",
  answerClassName = "",
} = Astro.props as FAQProps;
---

<section class={`max-w-3xl py-12 ${className}`}>
  {
    title && (
      <h2 class={`mb-12 text-3xl font-bold text-gray-900 dark:text-white`}>
        {title}
      </h2>
    )
  }

  <div class="space-y-8">
    {
      faqs.map((faq) => (
        <div class="space-y-2">
          <h3
            class={`text-lg font-bold text-gray-900 dark:text-white ${questionClassName}`}
          >
            {faq.question}
          </h3>
          <p class={`text-gray-600 dark:text-gray-300 ${answerClassName}`}>
            {faq.answer}
          </p>
        </div>
      ))
    }
  </div>
</section>
