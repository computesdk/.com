---
// PlusNavbar.astro - A navigation bar specifically for the Plus page
const { logo = "/images/hv_main_logo.svg" } = Astro.props;
---

<header class="w-full bg-white border-b border-gray-200">
    <div class="w-full max-w-[66.666667%] pl-6 py-4 lg:pl-24">
        <div class="w-full flex items-center justify-between">
            <!-- Logo -->
            <a href="/" class="flex items-center space-x-3 hover:opacity-80 transition-opacity">
                <img 
                    src={logo}
                    alt="ComputeSDK Logo" 
                    class="h-8 w-auto"
                    width="32"
                    height="32"
                />
                <span class="text-xl font-mono font-bold text-gray-900 dark:text-white">ComputeSDK</span>
            </a>
            
            <!-- Navigation Links -->
            <nav class="hidden md:flex items-center space-x-8 justify-end">
                <a href="#docs" class="text-sm font-medium text-gray-500 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white transition-colors">Docs</a>
                <a href="#contact" class="text-sm font-medium text-gray-500 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white transition-colors">Contact</a>
            </nav>
            
            <!-- Mobile menu button would go here -->
        </div>
    </div>
</header>
