---
// UseCases.astro
const useCases = [
  {
    icon: '/MaterialSymbolsDeployedCode.svg',
    title: "AI Code Execution",
    description: "Power AI coding assistants with real-time code execution, terminal streaming, and file system control."
  },
  {
    icon: '/MaterialSymbolsCodeBlocksOutlineSharp.svg',
    title: "Code Playgrounds",
    description: "Build interactive coding environments with instant preview URLs, hot reload, and multi-language support."
  },
  {
    icon: '/TdesignEducationFilled.svg',
    title: "Educational Platforms",
    description: "Create hands-on learning experiences with isolated environments and real-time student monitoring."
  }
];
---

<div class=" py-12 sm:py-16">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <!-- Section Header -->
    <div class="mx-auto max-w-2xl text-center mb-16">
      <div class="mb-4">
        <span class="inline-flex items-center rounded-full bg-emerald-600/10 dark:bg-emerald-300/30 px-3 py-1 text-xs font-semibold uppercase tracking-wider text-emerald-800 dark:text-emerald-300 ring-1 ring-inset ring-emerald-600/10">
          Use Cases
        </span>
      </div>
      <h2 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-5xl">
        Built for Modern Development
      </h2>
    </div>

    <!-- Use Cases Grid -->
    <div class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-8 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
      {useCases.map((useCase) => (
        <div class="group relative flex flex-col gap-6 bg-white dark:bg-gray-800/50 p-8 ring-1 ring-gray-200 dark:ring-gray-700 hover:ring-emerald-500 dark:hover:ring-emerald-400 transition-all duration-300 hover:shadow-xl mt-0">
          <!-- Icon -->
          <div class="flex h-16 w-16 items-center justify-center text-3xl group-hover:scale-110 transition-transform duration-300 p-2 mb-o">
            <img 
              src={useCase.icon} 
              alt="" 
              class="w-16 h-16 text-emerald-600 dark:text-emerald-400"
              width="32"
              height="32"
            />
          </div>
          
          <!-- Content -->
          <div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3 mt-2">
              {useCase.title}
            </h3>
            <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
              {useCase.description}
            </p>
          </div>
        </div>
      ))}
    </div>

    <!-- CTA Link -->
    <div class="mt-16 flex justify-center">
      <a 
        href="/use-cases" 
        class="group inline-flex items-center gap-2 text-lg font-semibold text-emerald-600 dark:text-emerald-400 hover:text-emerald-700 dark:hover:text-emerald-300 transition-colors no-underline"
      >
        Explore All Use Cases
        <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>
  </div>
</div>