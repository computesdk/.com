---
// Hero.astro
const {
  logo,
  darkLogo = "/images/hv_main_logo_1.svg",
  title = "ComputeSDK",
} = Astro.props;
---

<section class="relative py-24 sm:py-16">
  <div class="mx-auto max-w-7xl">
    <!-- Desktop layout - logo and nav in one row -->
    <div class="flex items-center justify-between">
      <!-- Logo container -->
      <div class="flex items-center">
        <!-- Light mode image (hidden in dark mode) -->
        <img
          src={logo}
          alt="ComputeSDK Logo"
          class="h-12 w-auto dark:hidden"
          width="48"
          height="48"
        />
        <!-- Dark mode image (hidden in light mode) -->
        <img
          src={darkLogo}
          alt="ComputeSDK Logo"
          class="hidden h-12 w-auto dark:block"
          width="48"
          height="48"
        />
      </div>

      <!-- Navigation Links -->
      <div class="flex items-center gap-6">
        <a
          href="/pro"
          class="text-sm font-medium text-gray-500 transition-colors hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
        >
          Pro
        </a>
        <a
          href="/docs"
          class="text-sm font-medium text-gray-500 transition-colors hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
        >
          Docs
        </a>
      </div>
    </div>

    <!-- Mobile layout - single line, smaller text -->
    <div class="mt-4 flex items-center justify-center gap-3 md:hidden">
      <!-- Light mode image (hidden in dark mode) -->
      <img
        src={logo}
        alt="ComputeSDK Logo"
        class="h-12 w-auto dark:hidden"
        width="24"
        height="24"
      />
      <!-- Dark mode image (hidden in light mode) -->
      <img
        src={darkLogo}
        alt="ComputeSDK Logo"
        class="hidden h-12 w-auto dark:block"
        width="24"
        height="24"
      />
    </div>
  </div>
</section>
