---
// Hero.astro
const { logo, title = 'ComputeSDK' } = Astro.props;
---

<section class="py-20 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto ml-24 flex flex-col items-start justify-start">
    <div class="flex flex-col md:flex-row items-center justify-center gap-6">
      <img 
        src={logo}
        alt="ComputeSDK Logo" 
        class="h-12 w-auto"
        width="48"
        height="48"
      />
      <h1 class="text-4xl md:text-2xl font-bold text-gray-900 text-left font-mono">
        {title}
      </h1>
    </div>
  </div>
</section>
