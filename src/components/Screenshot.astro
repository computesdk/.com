---
// Screenshot.astro - A component to display code/terminal screenshots with a nice frame
interface Props {
  src: string;
  alt: string;
  className?: string;
}

const { src, alt, className = "" } = Astro.props;
---

<div class={`relative w-full ${className}`}>
  <div
    class="relative z-10 overflow-hidden rounded-lg border border-l-0 border-gray-200 bg-white shadow-xl dark:border-gray-700 dark:bg-gray-800"
  >
    <div
      class="relative aspect-video w-full overflow-hidden bg-gray-100 dark:bg-gray-900"
    >
      <img
        src={src}
        alt={alt}
        class="h-full w-full object-cover object-top"
        loading="lazy"
      />
    </div>
  </div>
</div>
