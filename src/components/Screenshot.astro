---
// Screenshot.astro - A component to display code/terminal screenshots with a nice frame
interface Props {
  src: string;
  alt?: string;
  class?: string;
}

const { src, alt = "Screenshot", class: className = "" } = Astro.props;
---

<div class={`relative w-full ${className}`}>
  <div
    class="relative z-10 overflow-hidden rounded-r-lg border border-l-0 border-gray-200 bg-white dark:border-gray-700 dark:bg-gray-800"
  >
    <!-- Browser-style top bar -->
    <div
      class="flex items-center border-b border-gray-200 bg-gray-50 px-4 py-2 dark:border-gray-700 dark:bg-gray-900"
    >
      <div class="flex space-x-2">
        <span class="h-3 w-3 rounded-full bg-red-400"></span>
        <span class="h-3 w-3 rounded-full bg-yellow-400"></span>
        <span class="h-3 w-3 rounded-full bg-green-400"></span>
      </div>
    </div>

    <!-- The actual screenshot -->
    <div class="overflow-hidden">
      <img src={src} alt={alt} class="w-full object-cover" loading="lazy" />
    </div>
  </div>

  <!-- Subtle decorative elements -->
  <div
    class="absolute -bottom-1 -right-1 -z-10 h-full w-full rounded-r-lg bg-gray-100 dark:bg-gray-700"
  >
  </div>
  <div
    class="absolute -bottom-2 -right-2 -z-20 h-full w-full rounded-r-lg bg-gray-200 dark:bg-gray-600"
  >
  </div>
</div>
