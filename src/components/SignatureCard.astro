---
import GSLogoLight from '/GS.svg?url';
import GSLogoDark from '/GS-dark.svg?url';
---

<div class="signature flex flex-col items-start">
  <div class="logo-container">
    <img src={GSLogoLight} alt="GS Logo" width="60" height="60" class="dark:hidden" />
    <img src={GSLogoDark} alt="GS Logo" width="60" height="60" class="hidden dark:block" />
  </div>
  <div class="details dark:text-gray-300">
    <div class="name">Garrison Snelling</div>
    <div class="title">CEO, ComputeSDK</div>
    <a href="mailto:garrison@computesdk.com" class="email text-green-800/70 dark:text-green-200/70">garrison@computesdk.com</a>
  </div>
</div>

<style>
  .signature {
    display: flex;
    flex-direction: column;
    gap: 16px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    max-width: 400px;
    padding-top: 36px;
    text-align: left;
  }

  .logo-container {
    flex-shrink: 0;
  }

  .details {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .name {
    font-weight: 600;
    font-size: 1.125rem;
  }

  .title {
    font-size: 0.875rem;
    margin: 4px 0;
  }

  .email {
    font-size: 0.875rem;
    text-decoration: none;
  }

  .email:hover {
    text-decoration: underline;
  }
</style>