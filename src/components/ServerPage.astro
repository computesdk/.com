---
import PricePanel from './PricePanel.astro';
import HeroServer from './HeroServer.astro';
import FAQ from './FAQ.astro';
import Screenshot from './Screenshot.astro';
import Video from './Video.astro';
import CodeBlock from './CodeBlock.astro';
import ListColumn from './ListColumn.astro';
---

<div class="flex min-h-full flex-col">
  <div class="mx-auto flex w-full max-w-7xl flex-col gap-8 px-4 sm:px-6 lg:flex-row lg:px-8">
    {/* Mobile PricePanel - shown on small screens */}
    <div class="lg:hidden mt-8">
      <PricePanel />
    </div>

    <main class="flex-1">
      <HeroServer />
      <ListColumn />
      <Screenshot />
      <CodeBlock />
      <Video src="/SampleVideo.mp4" poster="" title="See it in action" />
      <FAQ />
    </main>

    {/* Desktop PricePanel - shown on lg screens and up */}
    <aside class="hidden lg:ml-12 lg:sticky lg:top-8 lg:block lg:w-96 lg:shrink-0">
      <PricePanel />
    </aside>
  </div>
</div>