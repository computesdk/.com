---
import PricePanel from './PricePanel.astro';
import Grid2x2 from './Grid2x2.astro';
import LogoCloud from './LogoCloud.astro';
import HeroServer from './HeroServer.astro';
import FAQ from './FAQ.astro';
import Screenshot from './Screenshot.astro';
---

<div class="flex min-h-full flex-col">
  
    <div class="mx-auto flex w-full max-w-7xl items-start gap-x-8 px-4 py-10 sm:px-6 lg:px-8">
  
      <main class="flex-1">
        <HeroServer />
        <Grid2x2 />
        <Screenshot />
        <LogoCloud />
        <FAQ />
      </main>
  
      <aside class="sticky top-8 hidden w-96 shrink-0 xl:block">
        <PricePanel />
      </aside>
    </div>
  </div>
  