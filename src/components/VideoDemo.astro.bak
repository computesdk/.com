---
// VideoDemo.astro
interface Props {
  src: string;
  poster?: string;
  title?: string;
}

const { src, poster, title = 'See it in action' } = Astro.props;
---

<div class="relative py-24 sm:py-32 overflow-hidden">
  
  <div class="relative mx-auto max-w-7xl px-6 lg:px-8">


    <!-- Headline - Clean and Direct -->
    <h2 class="text-center text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl mb-20">
      See Compute in Action
    </h2>

    <!-- Video Container with Browser-like Chrome -->
    <div class="mx-auto max-w-6xl">
      <div class="relative group">

        <!-- Video Frame -->
        <div class="relative overflow-hidden shadow-2xl shadow-emerald-500/10 ring-1 ring-white/5 group-hover:ring-emerald-500/30 transition-all duration-300">
          <div class="aspect-video bg-black">
            <iframe
              src={src}
              class="w-full h-full"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              allowfullscreen
              title={title}
            ></iframe>
          </div>
        </div>

        <!-- Subtle glow effect on hover -->
        <div class="absolute -inset-0.5 bg-gradient-to-r from-emerald-500 to-green-500 rounded-xl opacity-0 group-hover:opacity-20 blur-xl transition-opacity duration-500 -z-10"></div>
      </div>

      <!-- Optional: Quick stats or highlights below video -->
      <div class="mt-12 grid grid-cols-1 sm:grid-cols-3 gap-8 text-center">
        <div>
          <div class="text-3xl font-bold text-emerald-400">5s</div>
          <div class="mt-2 text-sm text-gray-400">Time to First Sandbox</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-emerald-400">100%</div>
          <div class="mt-2 text-sm text-gray-400">Browser Compatible</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-emerald-400">Any</div>
          <div class="mt-2 text-sm text-gray-400">Cloud Provider</div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  iframe {
    border: none;
  }
</style>