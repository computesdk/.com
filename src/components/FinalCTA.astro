---
// FinalCTA.astro
import CTABlock from "./CTABlock.astro";
---

<div class="mx-auto pt-32 px-8 mt-0 pb-32">
    <div class="bg-white dark:bg-gray-900 ring-1 ring-gray-200 dark:ring-gray-800 p-8 lg:p-16 max-w-4xl mx-auto rounded-xs">
      <div class="text-center">
        <!-- Headline -->
        <h2 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-5xl">
          Start Building Today
        </h2>

        <!-- Description -->
        <p class="mt-6 text-lg text-gray-600 dark:text-gray-400">
          Production-ready sandboxes are waiting for you.
        </p>
      </div>

      <!-- Secondary CTAs -->
      <div class="mt-8 flex justify-center">
        <CTABlock />
      </div>
    </div>
  </div>
</div>