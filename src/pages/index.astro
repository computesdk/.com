---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import FounderMessage from '../components/FounderMessage.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import Footer from '../components/Footer.astro';
// Import the logo image
const logoPath = '/images/hv_main_logo.png';
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="ComputeSDK - Powerful computing solutions for developers" />
    <title>ComputeSDK</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;500;700&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-screen bg-white dark:bg-gray-900 transition-colors duration-200">
    <ThemeToggle client:load />
    <!-- <Navbar client:load logo={logoPath} /> -->
    <main class="dark:bg-gray-900">
      <Hero logo={logoPath} darkLogo="/images/C.png" />
      <FounderMessage />
    </main>

    <Footer />
  </body>
</html>