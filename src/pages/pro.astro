---
// plus.
import "../styles/global.css";
import ProHero from "../components/ProHero.astro";
import PricePanel from "../components/PricePanel.astro";
import ThemeToggle from "../components/ThemeToggle.astro";
import Footer from "../components/Footer.astro";
import PageLinks from "../components/PageLinks.astro";
import ProNavbar from "../components/ProNavbar.astro";
import Screenshot from "../components/Screenshot.astro";
import ProTextBlock from "../components/ProTextBlock.astro";
import VideoEmbed from "../components/VideoEmbed.astro";
import BulletText from "../components/BulletText.astro";
import Table from "../components/Table.astro";
import FAQ from "../components/FAQ.astro";
import Video from "../components/Video.astro";
import Layout from "../layouts/Layout.astro";

// Table data
const resourceData = [
  { users: "250", ram: "2GB", cpu: "1CPU" },
  { users: "1,000", ram: "8GB", cpu: "4CPU" },
  { users: "5,000", ram: "32GB", cpu: "16CPU" },
  { users: "10,000", ram: "64GB", cpu: "32CPU" },
];

const columns = [
  { key: "users", header: "Concurrent Users", align: "center" },
  { key: "ram", header: "RAM", align: "center" },
  { key: "cpu", header: "CPU", align: "center" },
];

// FAQ data
const faqItems = [
  {
    question: "What is Compute SDK?",
    answer:
      "Compute SDK is a powerful framework that enables developers to build and deploy scalable, high-performance applications with ease. It provides a simple yet powerful API for handling complex computations and distributed systems.",
  },
  {
    question: "How does the pricing work?",
    answer:
      "Our pricing is based on the resources you use. We offer flexible plans that scale with your needs, from small projects to enterprise-level applications. You only pay for what you use with no hidden fees.",
  },
  {
    question: "Is there a free tier?",
    answer:
      "Yes! We offer a generous free tier that includes enough resources to get started and build small applications. You can upgrade at any time as your needs grow.",
  },
  {
    question: "How do I get support?",
    answer:
      "We provide comprehensive documentation, community forums, and email support for all users. Enterprise plans include priority support with guaranteed response times.",
  },
];
---

<Layout title="Pro | ComputeSDK">
  <div class="flex min-h-screen flex-col font-serif">
    <!-- Navbar with fixed positioning -->
    <div class="fixed left-0 right-0 top-0 z-50">
      <ProNavbar />
    </div>
    <div>
      <!-- Main content area -->
      <div class="flex-1 px-32 pt-16">
        <!-- Left section (2/3 width, scrollable) -->
        <div class="scrollbar-hide w-2/3 overflow-x-visible">
          <div class="pb-10 pt-20 text-2xl">
            <ProHero />
          </div>

          <!-- Screenshot with full left extension -->
          <div class="relative -ml-8 w-full">
            <Screenshot
              src="/images/windsurf_screenshot.png"
              alt="Terminal showing ComputeSDK in action"
              className="w-full"
            />
          </div>
          <div class="pb-10 pt-20">
            <ProTextBlock
              title="What is ComputeSDK Pro?"
              text="As our apps grow in complexity, we found that we needed more tools to make it easy for you and your team to access all the tools you need to host our operator and easily access all the compute resources your app needs. So we built the software we see needed for teams across industries, tech stacks, use cases, and organizations of all sizes."
            />
          </div>
          <div class="pb-10 pt-10">
            <ProTextBlock
              title="Why ComputeSDK Pro?"
              text="Tools make teams more productive. If your team is building an app that uses compute, a tool that allows them to focus on the what while easily levarging a tool to assist with the how... you have the recipe for better result from an energized team."
            />
          </div>
          <div class="relative -ml-8 w-full">
            <VideoEmbed
              vimeoUrl="https://vimeo.com/144059847"
              title="Demo Video"
              className="mt-8"
            />
          </div>
          <div class="relative -ml-6 w-full pt-10">
            <BulletText
              text="Tools make teams more productive. If your team is building an app that uses compute, a tool that allows them to focus on the what while easily levarging a tool to assist with the how... you have the recipe for better result from an energized team."
            />
          </div>
          <div class="relative -ml-6 w-full">
            <BulletText
              text="This is an example of a nother bullet point. Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam, quod. Do you want to hear a joke? Why did the math book look sad? Because it had too many problems."
            />
          </div>

          <div class="mt-12">
            <Table
              columns={columns}
              data={resourceData}
              className="mt-8 max-w-2xl"
              headerClassName="bg-gray-50 dark:bg-gray-800"
              rowClassName="hover:bg-gray-50 dark:hover:bg-gray-800/50"
            />
          </div>
          <div class="relative -ml-8 mt-20 w-full">
            <Video src="/videos/demo.mp4" title="Demo Video" className="mt-8" />
          </div>

          <!-- FAQ Section -->
          <div id="faq-section" class="mt-24">
            <FAQ
              faqs={faqItems}
              title="Frequently asked questions"
              className="space-y-12"
              questionClassName="text-xl"
              answerClassName="text-lg"
            />
          </div>
        </div>

        <!-- Price Panel Overlay -->
        <div
          class="fixed right-0 top-4 z-[60] flex h-auto w-1/3 flex-col items-end pr-24"
        >
          <PricePanel />
          <div
            class="mx-auto mt-6 w-full max-w-xs rounded-lg p-4 text-sm text-gray-600 shadow-sm dark:bg-gray-800/80 dark:text-gray-300"
          >
            <p class="mb-2">
              Please review all
              <a
                href="#faq-section"
                onclick="document.getElementById('faq-section').scrollIntoView({behavior: 'smooth'}); return false;"
                class="cursor-pointer font-extrabold text-gray-500 transition-colors hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300"
              >
                FAQs.
              </a> before making a purchase. If you have more questions, feel free
              to
              <a
                href="mailto:email@computesdk.com"
                class="font-extrabold text-gray-500 transition-colors hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300"
              >
                contact us.
              </a>
            </p>
          </div>
        </div>
      </div>
    </div>
    <footer
      class="w-full border-t border-gray-200 bg-gray-50 dark:border-gray-800 dark:bg-gray-900"
    >
      <div class="mx-auto max-w-7xl px-6 py-2 sm:px-6 lg:px-8">
        <div
          class="flex flex-col items-center justify-between gap-4 sm:flex-row"
        >
          <Footer>
            <ThemeToggle />
          </Footer>
        </div>
      </div>
    </footer>
  </div>
</Layout>

<style>
  /* Custom scrollbar for the left panel */
  .overflow-y-auto::-webkit-scrollbar {
    width: 6px;
  }
  .overflow-y-auto::-webkit-scrollbar-track {
    background: #f1f1f1;
  }
  .overflow-y-auto::-webkit-scrollbar-thumb {
    background: #888;
    border-radius: 3px;
  }
  .overflow-y-auto::-webkit-scrollbar-thumb:hover {
    background: #555;
  }
</style>
