---
interface Props {
  title?: string;
}

const { title = "ComputeSDK" } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="ComputeSDK - Powerful computing solutions for developers"
    />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/images/hv_main_logo.svg" />
    <link rel="mask-icon" href="/images/hv_main_logo.svg" color="#000000" />
    <link rel="apple-touch-icon" href="/images/hv_main_logo.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;500;700&display=swap"
      rel="stylesheet"
    />

    <!-- Include global CSS -->
    <link rel="stylesheet" href="/styles/global.css" />
  </head>

  <body
    class="bg-white text-gray-900 transition-colors duration-200 dark:bg-gray-900 dark:text-white"
  >
    <slot />

    <!-- Theme initialization script -->
    <script>
      // Check for saved theme preference or use system preference
      if (
        localStorage.theme === "dark" ||
        (!("theme" in localStorage) &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
  </body>
</html>
